{% extends "admin/base.html.twig" %}

{% block content %}

<form action="{{ path_for('admin_channel_edit', {'slug': channel.slug}) }}" method="post">
  <div class="form-group">
    <label for="name">Сувгын нэр</label>
    <input type="text" class="form-control" id="name" placeholder="name" name="name" value="{{ channel.name }}" required>
  </div>
  <div class="form-group">
    <label for="logo">Лого</label>
    <select class="form-control" name="logoPath" required>
        <option {{ channel.logoPath == 'mnb.png' ? 'selected' }} value="mnb.png">mnb</option>
        <option {{ channel.logoPath == 'mnb2.png' ? 'selected' }} value="mnb2.png">mnb2</option>
        <option {{ channel.logoPath == 'mn25.png' ? 'selected' }} value="mn25.png">mn25</option>
        <option {{ channel.logoPath == 'ubs.png' ? 'selected' }} value="ubs.png">ubs</option>
        <option {{ channel.logoPath == 'mongolhd.png' ? 'selected' }} value="mongolhd.png">mongolhd</option>
        <option {{ channel.logoPath == 'tv5.png' ? 'selected' }} value="tv5.png">tv5</option>
        <option {{ channel.logoPath == 'tv9.png' ? 'selected' }} value="tv9.png">tv9</option>
        <option {{ channel.logoPath == 'eagle.png' ? 'selected' }} value="eagle.png">eagle</option>
        <option {{ channel.logoPath == 'bolovsrol.png' ? 'selected' }} value="bolovsrol.png">bolovsrol</option>
    </select>
    <p class="help-block">*.jpg, *.png, *.gif өргөтгөлтэй зургууд оруулах боломжтой.</p>
  </div>
  <button type="submit" class="btn btn-default">Оруулах</button>
</form>


<br />
<a href="{{ path_for('admin_homepage') }}" title="Back" > Back to the list </a>
{% endblock %}
